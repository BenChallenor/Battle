<% if @attacker == @player_1 %>
<h1>You have attacked <%= @player_2.name %></h1>
<h1> <%= @player_2.name %>'s HP is now <%= @player_2.hit_points %></h1>
<% else %>
<h1>You have attacked <%= @player_1.name %></h1>
<h1> <%= @player_1.name %>'s HP is now <%= @player_1.hit_points %></h1>
<% end %>

<form action="/play">
  <input type="submit" value="Proceed to next turn">
</form>
